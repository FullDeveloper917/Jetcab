<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NotificationFragment">

    <LinearLayout
        android:id="@+id/layoutMain_NotificationFrg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorMyGray_6"
            android:padding="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW MESSAGE"
                android:textColor="@color/colorMyBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="FROM: JETCAB"
                android:textColor="@color/colorMyBlack"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:text="SUBJECT: "
                    android:textColor="@color/colorMyBlack"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8sp"
                    android:text="PRICE UPDATE FROM $2,000 to $3,000"
                    android:textColor="@color/colorMyBlack"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/listNotification_NotificationFrg"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1">
        </ListView>

    </LinearLayout>

</FrameLayout>