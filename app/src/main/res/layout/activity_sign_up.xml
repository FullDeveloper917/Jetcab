<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutMain_SignUp"
    android:background="@color/colorMyWhite"
    tools:context="com.david.jetcab.SignUpActivity">

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scaleType="center"-->
        <!--android:src="@drawable/splash_image"/>-->

    <LinearLayout
        android:id="@+id/layoutTitle_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0sp"
            android:layout_height="2sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#6e7072" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50sp"
            android:paddingRight="50sp"
            android:text="Profile"
            android:textAllCaps="true"
            android:textColor="@color/colorMyGray_8"
            android:textSize="24sp" />

        <View
            android:layout_width="0sp"
            android:layout_height="2sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#6e7072" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100sp"
        android:layout_marginLeft="70sp"
        android:layout_marginRight="70sp"
        android:layout_marginBottom="50sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/edtFirstName_SignUp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="First Name"
            android:textSize="14sp"
            android:textColor="@color/colorMyGray_8"
            android:textColorHint="@color/colorMyGray_8"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="text"
            android:background="@drawable/block_border_white_bg"/>
        
        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtLastName_SignUp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Last Name"
            android:textSize="14sp"
            android:textColor="@color/colorMyGray_8"
            android:textColorHint="@color/colorMyGray_8"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="text"
            android:background="@drawable/block_border_white_bg"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtEmail_SignUp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Email"
            android:textSize="14sp"
            android:textColor="@color/colorMyGray_8"
            android:textColorHint="@color/colorMyGray_8"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:background="@drawable/block_border_white_bg"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtTelePhone_SignUp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Telephone"
            android:textSize="14sp"
            android:textColor="@color/colorMyGray_8"
            android:textColorHint="@color/colorMyGray_8"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="phone"
            android:background="@drawable/block_border_white_bg"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtPassword_SignUp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Password"
            android:textSize="14sp"
            android:textColor="@color/colorMyGray_8"
            android:textColorHint="@color/colorMyGray_8"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@drawable/block_border_white_bg"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edtConfirmPassword_SignUp"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:hint="Confirm Password"
            android:textSize="14sp"
            android:textColor="@color/colorMyGray_8"
            android:textColorHint="@color/colorMyGray_8"
            android:textAllCaps="true"
            android:gravity="center"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@drawable/block_border_white_bg"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/btnNext_SignUp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:text="next"
            android:textColor="@color/colorMyWhite"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:background="#797b7d"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>
