<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMyWhite"
    android:id="@+id/layoutMain_FaqFrg"
    tools:context="com.david.jetcab.Fragments.MenuFragments.FaqFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30sp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/layoutAdd_Faq"
            android:layout_width="150sp"
            android:layout_height="70sp"
            android:layout_marginTop="20sp"
            android:padding="10sp"
            android:background="@color/colorMyGray_5" >

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50dp"
                android:src="@drawable/ic_faq"
                android:scaleType="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="FAQ"
                android:textColor="@color/colorMyGray_10"
                android:textSize="32sp"
                android:layout_gravity="bottom"/>
        </LinearLayout>


        <SearchView
            android:id="@+id/searchFaq_Faq"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:background="@drawable/search_view_bg"/>

        <ListView
            android:id="@+id/listViewFaq_Faq"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"/>

    </LinearLayout>

</FrameLayout>
