<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320sp"
    android:layout_height="wrap_content"
    android:paddingTop="30sp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    android:paddingBottom="10sp"
    android:background="@color/colorMyWhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:text="What is your Question?"
        android:textColor="@color/colorMyGray_10"
        android:textSize="18sp"
        android:gravity="left"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtQuestion_CreateFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorMyGray_10"
        android:textSize="14sp"
        android:singleLine="true"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:gravity="left|center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCreate_CreateFaq"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btnCancel_CreateFaq"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/colorMyGray_10"
            android:textSize="14sp"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>