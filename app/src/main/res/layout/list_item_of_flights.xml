<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutOneFlight_OneFlight"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMyWhite">

    <ImageView
        android:id="@+id/imgPlane_OneFlight"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:src="@drawable/no_image"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="15sp">

        <TextView
            android:id="@+id/txtFromCity_OneFlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monterrey"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@color/colorMyGray_9"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textSize="16sp"
            android:textColor="@color/colorMyGray_8"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtToCity_OneFlight"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancun"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textColor="@color/colorMyGray_9"/>

        <TextView
            android:id="@+id/txtCost_OneFlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 46000"
            android:textSize="16sp"
            android:textColor="@color/colorMyGray_9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETD:"
            android:textSize="16sp"
            android:textColor="@color/colorMyGray_9"/>

        <TextView
            android:id="@+id/txtTime_OneFlight"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            android:text="24/09/18 24:40"
            android:textSize="16sp"
            android:textColor="@color/colorMyGray_9"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutNonAuctionFlightInfo_OneFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:layout_alignRight="@+id/layoutAuctionFlightInfo_OneFlight">

                <ImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:src="@drawable/ic_chair"/>

                <TextView
                    android:id="@+id/txtSeatNumber_OneFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="@color/colorMyGray_7"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAuctionFlightInfo_OneFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auction"
                    android:textSize="16sp"
                    android:textColor="@color/colorMyGray_9"
                    android:textAllCaps="true"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/txtConfirmSeatNumber_OneFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 seats to confirm"
                    android:textSize="16sp"
                    android:textColor="@color/colorMyGray_9"/>

                <TextView
                    android:id="@+id/txtRemainDayNumber_OneFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 days remaining"
                    android:textSize="16sp"
                    android:textColor="@color/colorMyGray_9"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>