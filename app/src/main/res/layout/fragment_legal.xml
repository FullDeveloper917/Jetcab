<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.david.jetcab.Fragments.MenuFragments.LegalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutMain_LegalFrg"
        android:orientation="vertical"
        android:background="@color/colorMyWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp">

            <View
                android:layout_width="0sp"
                android:layout_height="2sp"
                android:layout_weight="1"
                android:background="#6e7072"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legal"
                android:textSize="24sp"
                android:textColor="@color/colorMyGray_8"
                android:textAllCaps="true"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:gravity="center"/>

            <View
                android:layout_width="0sp"
                android:layout_height="2sp"
                android:layout_weight="1"
                android:background="#6e7072"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtLegal_LegalFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorMyGray_9"
                android:paddingTop="20sp"
                android:paddingLeft="30sp"
                android:paddingRight="30sp"
                android:paddingBottom="30sp"/>

        </ScrollView>



    </LinearLayout>

</FrameLayout>
