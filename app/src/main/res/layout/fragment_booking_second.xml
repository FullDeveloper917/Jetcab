<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutMain_BookingSecondFrg"
    tools:context="com.david.jetcab.Fragments.BookingFragments.BookingSecondFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMyWhite"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPrev_BookingSecondFrg"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="32sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Prev"
                android:textColor="@color/colorMyWhite"
                android:textSize="18sp"
                android:background="#e6e7e8"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Select your plane"
                android:textColor="@color/colorMyGray_8"
                android:textSize="10sp"
                android:textAllCaps="true"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <ListView
                android:id="@+id/listPlanes_BookingSecondFrg"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:dividerHeight="15sp"
                android:divider="@color/colorMyWhite"
                android:layout_marginTop="10sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <LinearLayout
                android:id="@+id/layoutFlightInfo_BookingSecondFrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="5sp"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtFromCity_BookingSecondFrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancun"
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txtToCity_BookingSecondFrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toluca"
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETD: "
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtDepartureTime_BookingSecondFrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/13/17 14:27"
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETA: "
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtArrivalTime_BookingSecondFrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/13/17 14:27"
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_gravity="right"
                    android:layout_marginRight="30sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Final price: "
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="16sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/txtFinalPrice_BookingSecondFrg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textColor="@color/colorMyGray_8"
                        android:textSize="16sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnContinue_BookingSecondFrg"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:background="#e6e7e8"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:text="Continue"
                    android:textColor="@color/colorMyWhite"
                    android:textSize="16sp" />

            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutDetailOfPlane_BookingSecondFrg"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/data_info_component_bg">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="30sp">

                    <TextView
                        android:id="@+id/txtPlaneName_BookingSecondFrg"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MGHTLS"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/txtSeatCount_BookingSecondFrg"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7 seats"
                        android:textColor="@color/colorMyGray_10"
                        android:textSize="16sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtPlaneSpeed_BookingSecondFrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="30sp"
                    android:text="900 km/hr"
                    android:textColor="@color/colorMyGray_10"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/imgPlane_BookingSecondFrg"
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:layout_margin="20sp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnCloseOfDetails_BookingSecondFrg"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:padding="0sp"
                android:scaleType="fitXY"
                android:background="@drawable/ic_close"/>
        </RelativeLayout>



    </RelativeLayout>

</FrameLayout>
